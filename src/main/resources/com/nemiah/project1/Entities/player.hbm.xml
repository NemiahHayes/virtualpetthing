<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "https://hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.nemiah.project1.entitiesbase.Player" table="players">
        <id name="id" type="int">
            <column name="player_id"/>
            <generator class="identity"/>
        </id>
        <property name="name" type="java.lang.String">
            <column name="player_name"/>
        </property>
        <property name="dungeonLevel" type="int">
            <column name="dungeon_level"/>
        </property>
        <property name="food" type="int">
            <column name="food"/>
        </property>
    <one-to-one name="pet" class="com.nemiah.project1.entitiesbase.Pet" cascade="save-update"></one-to-one>
    </class>
</hibernate-mapping>